{% extends 'baseadmin.html.twig' %}

{% block title %} consulter conge {% endblock %}

{% block body %}
    {{ parent() }}
    {% if congesearch is defined %}
    {{ form(form) }}
    {% if congesearch != null %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">conge id  </th>
                <th scope="col">
                     date de debut

                </th>
                <th scope="col">
                    date de fin
                </th>
                <th scope="col">

                    nbjour </th>
                <th scope ="col">
                    typedeconge
                </th>

                <th scope="col">
                    state
                </th>
                <th scope="col"> employe id  </th>
                <th scope="col"> actions  </th>


            </thead>
            <tbody>


            {%  for conge in congesearch %}
                {% if conge.employe.admin==admin %}
                    {% if conge.state=='invalide' %}
                        <tr class="table table-danger">
                    {% endif %}
                    {% if conge.state=='no check' %}
                        <tr class="table-dark">
                    {% endif %}

                    {% if conge.state=='valide' %}
                        <tr class="table-info">
                    {% endif %}

                    <th scope="row"> {{ conge.id }} </th>
                    <td>  {{ conge.datedebut|date("d/m/Y") }} </td>
                    <td> {{ conge.datefin|date("d/m/Y") }} </td>
                    <td> {{ conge.nbjour }} </td>
                    <td> {{ conge.typeconge }} </td>

                    <td> {{ conge.state }} </td>
                    <td> {{ conge.employe.id }} </td>
                    {% if conge.state=='no check' %}
                        <td>
                        <a href ="{{ path ('validercongeform',{"id":conge.id}) }}" class="nav-link "
                        > validerconge</a>

                    {% else  %}
                        <td> déjà vérifié </td>
                    {% endif %}
                    </tr>
                {% endif %}
            {% endfor %}
            {{ knp_pagination_render(congesearch) }}
            </tbody>
        </table>
        {% endif %}
        {% endif %}
    {% if  congesearch is not defined or congesearch ==null  %}

{% extends 'base.html.twig' %}

{% block title %}SuiviConge index{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>SuiviConge index</h1>
{% if suivi_conges!=NULL %}
    <table class="table">
        <thead>
            <tr>
                <th> idcontrat </th>
                <th> idemp </th>

                <th> mois/Annee</th>
                <th>Quota</th>
                <th>Nbjourpris</th>
                <th>Nbjourrestant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
